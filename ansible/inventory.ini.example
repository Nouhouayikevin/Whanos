# Whanos Infrastructure Inventory
# 3 VMs Ubuntu (DigitalOcean)

[all:vars]
ansible_user=
ansible_password=
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

# VM pour Jenkins + Registry
[jenkins]
jenkins-vm ansible_host=

# Cluster K3s
[k3s_master]
k3s-master ansible_host=

[k3s_workers]
